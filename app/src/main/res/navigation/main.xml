<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.katsiro.alexey.gia.ui.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/showCategoryFragment"
            app:destination="@id/categoryFragment" />
        <action
            android:id="@+id/showCategoryEditorFragment"
            app:destination="@id/categoryEditorFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.katsiro.alexey.gia.ui.CategoryFragment"
        android:label="CategoryFragment" >
        <argument
            android:name="categoryId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/categoryEditorFragment"
        android:name="com.katsiro.alexey.gia.ui.editors.CategoryEditorFragment"
        android:label="CategoryEditorFragment" >
        <argument
            android:name="category"
            app:argType="com.katsiro.alexey.gia.data.entities.Category"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>